{
	"title": "Backslash/hash",
	"rules": [
		{
			"description": "Move hash to backslash, backslash to shift+backslash, and pipe to alt+backslash, and whatever was on alt-backslash to alt-3",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "backslash",
						"modifiers": {
							"optional": [
								"caps_lock"
							]
						}
					},
					"to": [
						{
							"key_code": "3",
							"modifiers": [
								"left_option"
							]
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "backslash",
						"modifiers": {
							"mandatory": [
								"shift"
							],
							"optional": [
								"caps_lock"
							]
						}
					},
					"to": [
						{
							"key_code": "backslash"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "backslash",
						"modifiers": {
							"mandatory": [
								"option"
							],
							"optional": [
								"caps_lock"
							]
						}
					},
					"to": [
						{
							"key_code": "backslash",
							"modifiers": [
								"left_shift"
							]
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "3",
						"modifiers": {
							"mandatory": [
								"option"
							],
							"optional": [
								"caps_lock"
							]
						}
					},
					"to": [
						{
							"key_code": "backslash",
							"modifiers": [
								"left_option"
							]
						}
					]
				}
			]
		}
	]
}
